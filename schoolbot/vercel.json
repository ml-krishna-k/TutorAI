{
  "version": 2,
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/((?!css|javascript|classes|doubt|study-plan|practice-quiz|progress|geminiAPI|emotionDetection|EMOTION_DETECTION_README|MindMate|favicon\\.ico|robots\\.txt).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
